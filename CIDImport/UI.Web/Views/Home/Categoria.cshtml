@using Repositorio
@model ViewModelCategoria
@{
    ViewBag.Title = "Categorias";
}

<h2>Busca CID</h2>
<div class="span12" style="margin-left: 0">
    <div class="span3">
        <div class="input-append">
            <input class="span9" id="appendedInputButton" type="text">
            <button class="btn" type="button">Go!</button>
        </div>
    </div>
    <div class="span9">
    </div>
    <div class="span9">
        <div class="row">
            @{
                var capitulo = (ViewModelCapitulo)ViewBag.capitulo;
                var titulo = capitulo.Descricao.Split('-');
                titulo[0] = titulo[0].Trim();
                titulo[1] = titulo[1].Trim();

                var grupo = (ViewModelGrupo)ViewBag.grupo;
            }
            <h1>@titulo[0]</h1>
            <p>@titulo[1]</p>

            <h2>Grupo entre @grupo.CategoriaInicial e @grupo.CategoriaFinal</h2>
            <p>@grupo.Descricao</p>
        </div>
        <div class="row">

            <div class="span9" style="margin-left: 0; height: 110px; padding: 5px;">
                
                    <h3>@Model.CodigoDaCategoria - @Model.Descricao</h3>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Subcategoria</th>
                                <th>Descrição</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var subCategoria in Model.ListaDeSubCategorias)
                            {
                                <tr>
                                    <td>@subCategoria.CodigoDaSubCategoria</td>
                                    <td><a href="~/Home/Detalhe/?codigo=@subCategoria.CodigoDaSubCategoria"> @subCategoria.Descricao</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
            </div>

        </div>
    </div>
</div>
